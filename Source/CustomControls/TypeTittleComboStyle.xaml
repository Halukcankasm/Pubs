<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Pubs.Source.CustomControls">
    <Style TargetType="local:TypeTittleCombo" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TypeTittleCombo">
                    <Grid>
                        <ComboBox x:Name="TypeComboBox">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" >
                                    <Style.Setters>
                                        <Setter Property="Width" Value="160" />
                                    </Style.Setters>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>